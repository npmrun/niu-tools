{
    "compilerOptions": {
        "target": "es5", // 最低兼容的版本
        "strict": true, // 启用严格模式
        "module": "CommonJS", // 指定生成什么模块的代码
        "moduleResolution": "node",
        "lib": ["DOM", "ESNext"],
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "resolveJsonModule": false,
        "declaration": true,
        "allowJs": true,
        "declarationDir": "../niu-tools",
        "outDir": "../niu-tools",
        "rootDir": "src", // 指定.的话，在dist会生成src同结构的目录文件
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["typings/**/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules"]
}

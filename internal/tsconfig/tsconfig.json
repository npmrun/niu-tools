{
    "compilerOptions": {
        "target": "ESNext", // 最低兼容的版本
        "strict": true, // 启用严格模式
        "module": "ES6", // 指定生成什么模块的代码
        "moduleResolution": "node",
        "lib": ["DOM", "ESNext"],
        "types": ["vitest/globals"],
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "resolveJsonModule": false,
        "allowJs": true
    }
}
